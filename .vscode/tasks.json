{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Android (emulador)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "scripts/run_android.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Android (release)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "scripts/run_android.ps1",
        "-Release"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}